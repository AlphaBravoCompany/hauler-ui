# Hauler UI Environment Configuration
# Copy this file to .env and adjust values as needed

# Server
PORT=8080

# Authentication (optional - leave empty to disable password protection)
HAULER_UI_PASSWORD=

# Hauler CLI Settings
HAULER_LOG_LEVEL=info
HAULER_IGNORE_ERRORS=false
HAULER_RETRIES=3

# Data Directories (usually left at defaults for containerized deployment)
HAULER_DIR=/data
HAULER_STORE_DIR=/data/store
HAULER_TEMP_DIR=/data/tmp

# Docker Config (for registry credentials)
DOCKER_CONFIG=/data/.docker

# Database
DATABASE_PATH=/data/app.db
